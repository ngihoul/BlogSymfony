{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}

    <div class="body-wrapper">
        <h1>Les articles concernant {{ category.name }}</h1>
        <ul>
            {% for article in articles %}
                <li>{{ article.creationDate|date('d/m/Y') }} : [{{ article.category.name }}] <a
                            href="{{ path("article_detail", { id : article.id }) }}">{{ article.title }}</a></li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}