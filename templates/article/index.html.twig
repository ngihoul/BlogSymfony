{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="body-wrapper">
    <h1>{{ title }}</h1>
    <ul>
    {% for article in articles %}
        <li>{{ article.creationDate|date('d/m/Y') }} : [{{ article.category.name }}] <a href="{{ path("article_detail", { id : article.id }) }}">{{ article.title }}</a></li>
    {% endfor %}
    </ul>
</div>

{% endblock %}
